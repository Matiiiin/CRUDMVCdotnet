{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "data source=DESKTOP-AUCBLL1;initial catalog=CRUDMVC;trusted_connection=true;TrustServerCertificate=true"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File" , "Serilog.Sinks.Console" , "Serilog.Sinks.Database"],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Minute",
          "fileSizeLimitBytes": 10000,
          "rollOnFileSizeLimit": true
        }
      }
    ]
  }
}
